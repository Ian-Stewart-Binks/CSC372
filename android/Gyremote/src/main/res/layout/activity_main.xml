<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ian.gyremote.gyremote.MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView3"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BT On"
            android:id="@+id/button1"
            android:layout_alignTop="@+id/textView3"
            android:onClick="on" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward"
            android:id="@+id/button2"
            android:onClick="goForward"
            android:layout_alignBaseline="@+id/button3" android:layout_alignBottom="@+id/button3"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reverse"
            android:id="@+id/button3" android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:onClick="reverse"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/button4"
            android:onClick="list" android:layout_alignBaseline="@+id/button3" android:layout_alignBottom="@+id/button3"
            android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brake"
            android:id="@+id/button5"
            android:onClick="brake" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"/>

</RelativeLayout>
